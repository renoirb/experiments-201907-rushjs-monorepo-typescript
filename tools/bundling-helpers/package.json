{
  "name": "@renoirb/tools-bundling-helpers",
  "version": "1.0.2",
  "description": "Package bundling helper scripts",
  "homepage": "https://github.com/renoirb/experiments-201908-rush-typescript-just-bili-monorepo/blob/v1.x/tools/bundling-helpers",
  "repository": {
    "type": "git",
    "url": "https://github.com/renoirb/experiments-201908-rush-typescript-just-bili-monorepo.git",
    "directory": "tools/bundling-helpers"
  },
  "license": "MIT",
  "author": {
    "name": "Renoir Boulanger",
    "email": "contribs@renoirboulanger.com"
  },
  "exports": {
    "import": "./dist/index.mjs",
    "require": "./dist/index.js"
  },
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "typings": "dist/index.d.ts",
  "bin": {
    "use-cross-env": "./bin/cross-env",
    "use-rimraf": "./bin/rimraf",
    "use-run-all": "./bin/run-all"
  },
  "files": [
    "dist",
    "bin"
  ],
  "scripts": {
    "build": "./bin/run-all build:*",
    "build:cjs": "bili --target node --format cjs --input src/index.ts --file-name index.js",
    "build:esm": "bili --target node --format esm --input src/index.ts --file-name index.mjs",
    "clean": "./bin/rimraf .rpt2_cache dist *.*.log",
    "fix": "./bin/cross-env use-prettier --write '*'",
    "lint": "use-eslint --fix 'src/**/*.ts'",
    "prepublishOnly": "rushx clean build",
    "test": "use-jest --detectOpenHandles",
    "test:snapshots": "use-jest --detectOpenHandles -u"
  },
  "dependencies": {
    "cross-env": "^5.2.0",
    "npm-run-all": "^4.1.0",
    "rimraf": "~3.0.0",
    "@rushstack/node-core-library": "^3.24.1"
  },
  "devDependencies": {
    "@microsoft/node-library-build": "^6.4.0",
    "@renoirb/conventions-use-eslint": "^1.0.1",
    "@renoirb/conventions-use-jest": "^1.0.1",
    "@renoirb/conventions-use-prettier": "^1.0.1",
    "@renoirb/conventions-use-typescript-3": "^1.0.2",
    "@rollup/plugin-babel": "^5.0.0",
    "@types/core-js": "^2.5.2",
    "@types/jest": "^25.1.3",
    "@types/node": "^10.17.13",
    "@types/resolve": "^0.0.8",
    "jest": "^25.1.0",
    "ts-jest": "^25.2.0",
    "bili": "^4.8.1",
    "rollup": "^1.32.0",
    "rollup-plugin-typescript2": "^0.27.0",
    "tslib": "^2.0.0",
    "typescript": "^3.9.0"
  }
}
